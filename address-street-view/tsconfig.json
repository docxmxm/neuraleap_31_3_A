{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./js/dist",
    "moduleResolution": "node",
    "lib": ["dom", "es2015", "es2016", "es2017"]
  },
  "include": ["js/*.ts"],
  "exclude": ["node_modules"]
} 